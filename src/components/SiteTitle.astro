---
import { Badge } from "@astrojs/starlight/components";

const { siteTitle, siteTitleHref } = Astro.props;
const minecraftVersion = "1.22?";
const datapackVersion = "66";
---

<div class="title-wrapper sl-flex">
  <a href={siteTitleHref} class="site-title">{siteTitle}</a>
  <Badge
    text={`MC:JE ${minecraftVersion} | DP ${datapackVersion}`}
    variant="success"
    class="update-label"
  />
</div>

<style>
  .title-wrapper {
    align-items: center;
    gap: var(--sl-nav-gap);
  }
  .site-title {
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    white-space: nowrap;
  }
  @media screen and (max-width: 660px) {
    .update-label {
      display: none;
    }
  }
</style>
