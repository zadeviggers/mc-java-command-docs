---
import VersionBadge from "../VersionBadge.astro";

const { siteTitle, siteTitleHref } = Astro.props;
---

<div class="title-wrapper sl-flex">
  <a href={siteTitleHref} class="site-title">{siteTitle}</a>
  <VersionBadge class="update-label" />
</div>

<style>
  .title-wrapper {
    align-items: center;
    gap: var(--sl-nav-gap);
  }
  .site-title {
    font-size: var(--sl-text-h4);
    font-weight: 600;
    color: var(--sl-color-text-accent);
    text-decoration: none;
    white-space: nowrap;
  }
  @media (max-width: 50rem) {
    .update-label {
      display: none;
    }
  }
</style>
